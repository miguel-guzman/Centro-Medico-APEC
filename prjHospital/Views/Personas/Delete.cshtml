@model prjHospital.Models.PersonaModel
@{
  ViewBag.Title = "Eliminar | Pacientes";
}
<div class="jumbotron text-center rounded-0">
  <h1 class="display-4">@Html.DisplayFor(model => model.NombreCompleto)</h1>
  <p class="lead">Ficha de Paciente</p>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-header text-center">
          <h1><span class="badge badge-primary">@Html.DisplayNameFor(model => model.Id)@Html.DisplayFor(model => model.Id)</span></h1>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.CedulaIdentidad)</strong></li>
          <li class="list-group-item"><i class="mr-2 pb-1" data-feather="credit-card"></i>@Html.DisplayFor(model => model.CedulaIdentidad)</li>
          <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.FechaNacimiento)</strong></li>
          <li class="list-group-item"><i class="mr-2 pb-1" data-feather="calendar"></i>@Html.DisplayFor(model => model.FechaNacimiento)</li>
          <li class="list-group-item"><strong>@Html.DisplayNameFor(model => model.Sexo)</strong></li>
          <li class="list-group-item"><i class="mr-2 pb-1" data-feather="user"></i>@Html.DisplayFor(model => model.Sexo.Nombre)</li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col text-center">
      @using (Html.BeginForm())
      {
        @Html.AntiForgeryToken()
        <p>¿Seguro desea eliminar este paciente?</p>
        <div class="form-group">
          <a class="btn btn-secondary" href="@Url.Action(actionName: "Index")"><i class="pb-1" data-feather="arrow-left"></i>Volver</a>
          <button type="submit" class="btn btn-danger" href="@Url.Action(actionName: "Delete", routeValues: new { id = Model.Id })"><i class="pb-1" data-feather="trash"></i>Eliminar</button>
        </div>
      }
    </div>
  </div>
</div>
